                    <x:Double x:Key="TitlebarHeight">28</x:Double>
                    <AcrylicBrush x:Key="TitlebarBackground" BackgroundSource="HostBackdrop" TintColor="{ThemeResource TitlebarTintColor}" TintOpacity="0.3" FallbackColor="{ThemeResource SystemAltHighColor}" />

                    <Style x:Key="CloseButtonStyle" TargetType="controls:ChromeButton">
                        <Setter Property="NormalForeground" Value="{ThemeResource SystemBaseHighColor}" />
