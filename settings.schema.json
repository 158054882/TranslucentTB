{
  "$schema": "https://json-schema.org/draft/2019-09/schema#",
  "title": "TranslucentTB Settings Schema",
  "$defs": {
    "TaskbarAppearance": {
      "properties": {
        "accent": {
          "enum": [
            "normal",
            "opaque",
            "clear",
            "blur",
            "acrylic"
          ],
          "type": "string"
        },
        "color": {
          "pattern": "^#([A-Fa-f0-9]{3}|[A-Fa-f0-9]{4}|[A-Fa-f0-9]{6}|[A-Fa-f0-9]{8})$",
          "type": "string",
          "format": "color"
        },
        "show_peek": {
          "type": "boolean"
        }
      },
      "type": "object"
    },
    "OptionalTaskbarAppearance": {
      "allOf": [
        {
          "properties": {
            "enabled": {
              "type": "boolean"
            }
          },
          "type": "object"
        },
        {
          "$ref": "#/$defs/TaskbarAppearance"
        }
      ]
    },
    "RuledTaskbarAppearance": {
      "allOf": [
        {
          "properties": {
            "rules": {
              "items": {
                "allOf": [
                  {
                    "properties" : {
                      "window_class": {
                        "type": "string"
                      },
                      "window_title": {
                        "type": "string"
                      },
                      "process_name": {
                        "type": "string"
                      }
                    },
                    "type": "object"
                  },
                  {
                    "$ref": "#/$defs/TaskbarAppearance"
                  }
                ]
              },
              "uniqueItems": true,
              "type": "array"
            }
          },
          "type": "object"
        },
        {
          "$ref": "#/$defs/OptionalTaskbarAppearance"
        }
      ]
    }
  },
  "properties": {
    "desktop_appearance": {
      "$ref": "#/$defs/TaskbarAppearance"
    },
    "visible_window_appearance": {
      "$ref": "#/$defs/RuledTaskbarAppearance"
    },
    "maximized_window_appearance": {
      "$ref": "#/$defs/RuledTaskbarAppearance"
    },
    "start_opened_appearance": {
      "$ref": "#/$defs/RuledTaskbarAppearance"
    },
    "search_opened_appearance": {
      "$ref": "#/$defs/RuledTaskbarAppearance"
    },
    "task_view_opened_appearance": {
      "$ref": "#/$defs/OptionalTaskbarAppearance"
    },
    "battery_saver_appearance": {
      "$ref": "#/$defs/OptionalTaskbarAppearance"
    },
    "ignored_windows": {
      "properties": {
        "window_class": {
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "type": "array"
        },
        "window_title": {
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "type": "array"
        },
        "process_name": {
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "type": "array"
        }
      },
      "type": "object"
    },
    "hide_tray": {
      "type": "boolean"
    },
    "disable_saving": {
      "type": "boolean"
    },
    "verbosity": {
      "enum": [
        "trace",
        "debug",
        "info",
        "warn",
        "err",
        "critical",
        "off"
      ],
      "type": "string"
    }
  },
  "type": "object"
}
